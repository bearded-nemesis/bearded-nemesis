= form_for @song, :html => {:class => "form-horizontal"} do |f|
  - if @song.errors.any?
    #error_explanation
      %h5= "#{pluralize(@song.errors.count, "error")} prohibited this song from being saved:"
      %ul
        - @song.errors.full_messages.each do |msg|
          %li= msg

  .control-group
    = f.label :name, :class => "control-label"
    .controls
      = f.text_field :name
  
  .control-group
    = f.label :genre, :class => "control-label"
    .controls
      = f.text_field :genre
      
  .control-group
    = f.label :guitar_difficulty, :class => "control-label"
    .controls
      = f.number_field :guitar_difficulty      
      
  .control-group
    = f.label :bass_difficulty, :class => "control-label"
    .controls
      = f.number_field :bass_difficulty    
      
  .control-group
    = f.label :song_difficulty, :class => "control-label"
    .controls
      = f.number_field :song_difficulty    
      
  .control-group
    = f.label :drums_difficulty, :class => "control-label"
    .controls
      = f.number_field :drums_difficulty    
      
  .control-group
    = f.label :vocals_difficulty, :class => "control-label"
    .controls
      = f.number_field :vocals_difficulty   
      
  .control-group
    = f.label :keyboard_difficulty, :class => "control-label"
    .controls
      = f.number_field :keyboard_difficulty           
  
  .form-actions    
    = f.submit 'Save', :class => "btn"
