= form_for @song, :html => {:class => "form-horizontal"} do |f|
  - if @song.errors.any?
    #error_explanation
      %h5= "#{pluralize(@song.errors.count, "error")} prohibited this song from being saved:"
      %ul
        - @song.errors.full_messages.each do |msg|
          %li= msg

  .control-group
    = f.label :name, :class => "control-label"
    .controls
      = f.text_field :name
  
  .control-group
    = f.label :artist, :class => "control-label"
    .controls
      = f.text_field :artist
  
  .control-group
    = f.label :genre, :class => "control-label"
    .controls
      = f.text_field :genre

  .control-group
    = f.label :shortname, class: "control-label"
    .controls
      = f.text_field :shortname

  .control-group
    = f.label :year, :class => "control-label"
    .controls
      = f.number_field :year

  .control-group
    = f.label :release_date, :class => "control-label"
    .controls
      = f.date_select :release_date, include_blank: true

  .control-group
    = f.label :source, :class => "control-label"
    .controls
      = f.select :source, Song::SOURCES, include_blank: true
      
  .control-group
    = f.label :guitar_difficulty, :class => "control-label"
    .controls
      = f.number_field :guitar_difficulty      
      
  .control-group
    = f.label :bass_difficulty, :class => "control-label"
    .controls
      = f.number_field :bass_difficulty    
      
  .control-group
    = f.label :song_difficulty, :class => "control-label"
    .controls
      = f.number_field :song_difficulty    
      
  .control-group
    = f.label :drums_difficulty, :class => "control-label"
    .controls
      = f.number_field :drums_difficulty    
      
  .control-group
    = f.label :vocals_difficulty, :class => "control-label"
    .controls
      = f.number_field :vocals_difficulty   
      
  .control-group
    = f.label :keyboard_difficulty, :class => "control-label"
    .controls
      = f.number_field :keyboard_difficulty    
      
  .control-group
    = f.label :pro_guitar_difficulty, :class => "control-label"
    .controls
      = f.number_field :pro_guitar_difficulty      
      
  .control-group
    = f.label :pro_bass_difficulty, :class => "control-label"
    .controls
      = f.number_field :pro_bass_difficulty
      
  .control-group
    = f.label :pro_drums_difficulty, :class => "control-label"
    .controls
      = f.number_field :pro_drums_difficulty    
      
  .control-group
    = f.label :pro_vocals_difficulty, :class => "control-label"
    .controls
      = f.number_field :pro_vocals_difficulty   
      
  .control-group
    = f.label :pro_keyboard_difficulty, :class => "control-label"
    .controls
      = f.number_field :pro_keyboard_difficulty       
  
  .form-actions    
    = f.submit 'Save', :class => "btn"
