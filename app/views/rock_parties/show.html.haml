%p#notice= notice

.span8.offset2
  .box-layout
    .row-fluid
      .span12
        %h3
          = @rock_party.name

    .row-fluid
      .span4
        %fieldset
          %legend Details
          %p
            %b Location:
            = @rock_party.location
          %p
            %b Date:
            = get_event_datetime(@rock_party.eventDate)
          %p
            %b Host:
            = @rock_party.user.email unless @rock_party.user.nil?
      .span4
        %fieldset
          %legend Attendees
          %ul
            - @rock_party.users.each do |user|
              %li= user.email
      .span4
        %fieldset
          %legend Playlists
  .row-fluid  
    .span12
      = link_to 'Edit', edit_rock_party_path(@rock_party)
      \|
      = link_to 'Back', rock_parties_path