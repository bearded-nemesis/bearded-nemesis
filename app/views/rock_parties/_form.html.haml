= form_for @rock_party do |f|
  - if @rock_party.errors.any?
    #error_explanation
      %h2= "#{pluralize(@rock_party.errors.count, "error")} prohibited this rock_party from being saved:"
      %ul
        - @rock_party.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :location
    = f.text_field :location
  .field
    = f.label :eventDate
    = f.datetime_select :eventDate
  .field
    = f.label :eventHost
    = f.text_field :eventHost
  .actions
    = f.submit 'Save'
