.span8.offset2
  .box-layout
    .row-fluid
      .span12
        %h3 Auto-add songs

    =form_tag generate_playlist_path(@playlist) do
      .row-fluid
        .span3
          %fieldset
            %legend
              Details
          .field
            = label_tag "song_count"
            = number_field_tag "song_count", 10, min: 1, required: true

          .field
            = label_tag "include_unrated"
            = check_box_tag "include_unrated", true, checked: true

          .field
            = label_tag "default_rating"
            = number_field_tag "default_rating", 3, min: 0, max: 5, required: true

          .field
            = label_tag "genre_filter"
            = select_tag("genre_filter", options_for_select(@genres), multiple: true)
          .field
            = label_tag "difficulty_filter_instrument"
            = select_tag "difficulty_filter_instrument", options_for_select(ApplicationController::INSTRUMENTS_WITH_PRO)
            = label_tag "difficulty_filter_low"
            = number_field_tag "difficulty_filter_low", 0, min: 0, max: 6
            = label_tag "difficulty_filter_high"
            = number_field_tag "difficulty_filter_high", 6, min: 0, max: 6

        .span9
          %fieldset
            %legend
              Players
          %table
            %thead
              %tr
                %th &nbsp;
                - @playlist.players.each do |player|
                  %th= player.email
            %tbody
              - ApplicationController::INSTRUMENTS.each do |instrument|
                %tr
                  %td= instrument
                  - @playlist.players.each do |player|
                    %td= radio_button_tag "instrument_#{player.id}", instrument
                %tr
                  %td= "#{instrument} (Pro)"
                  - @playlist.players.each do |player|
                    %td= radio_button_tag "instrument_#{player.id}", "pro_#{instrument}"

      .row-fluid
        .span12
          = submit_tag "Add songs"
