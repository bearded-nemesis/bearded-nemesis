= form_for @playlist do |f|
  - if @playlist.errors.any?
    #error_explanation
      %h2= "#{pluralize(@playlist.errors.count, "error")} prohibited this playlist from being saved:"
      %ul
        - @playlist.errors.full_messages.each do |msg|
          %li= msg

  .control-group
    = f.label :name, :class => "control-label"
    .controls
      = f.text_field :name
  .control-group
    = f.label :user, :class => "control-label"
    .controls
      = f.text_field :user
  .control-group
    = f.label :amount_of_songs, :class => "control-label"
    .controls
      = f.number_field :amount_of_songs
  .control-group
    = f.label :include_unrated_songs, :class => "control-label"
    .controls
      = f.check_box :include_unrated_songs
  .control-group
    = f.label :unrated_songs_rating, :class => "control-label"
    .controls
      = f.number_field :unrated_songs_rating

  .form-actions
    = f.submit 'Save', :class => "btn"
