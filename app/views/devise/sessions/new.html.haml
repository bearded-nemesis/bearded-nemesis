= form_for resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form-signin box-layout"} do |f|

  %h2.form-signin-heading Sign in

  - flash.each do |name, msg|
    .alert.alert-error.fade.in
      %strong Error!
      = msg
      %button.close{:type => "button", "data-dismiss" => "alert"}
        &times;

  = f.email_field :email, :class => "input-block-level", :placeholder => "Email address"
      
  = f.password_field :password, :class => "input-block-level", :placeholder => "Password"

  %label.checkbox
    = f.check_box :remember_me
    &nbsp;Remember me
                            
  = f.submit "Sign in", :class => "btn"

  .help-links
    = render "devise/shared/links"